<Window x:Class="Line_Manager_Vista.Login_LManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Line_Manager_Vista"
        mc:Ignorable="d"
        Title="Login_LManager" Height="400" Width="200">
    <Grid Background="#D9D9D9">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="250" Margin="-30,110,-28,169">

            <!-- Usuario -->
            <!-- Usuario -->
            <TextBox x:Name="txtUsuario" Width="100" Height="35"
                     Background="#D2E5E9" Foreground="#293035" FontSize="14"
                     Margin="75,10,75,0" Text="Usuario" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
            <PasswordBox x:Name="txtContrasena" Width="100" Height="35"
                         Background="#D2E5E9" Foreground="#293035" FontSize="14" Margin="75,10,75,0"/>
            <!-- Botón Iniciar sesión -->
        </StackPanel>
        <Button Content="Iniciar Sesión" Width="100" Height="40"
                    Background="#293035" Foreground="White" FontSize="16"
                    Click="btnIniciarSesion_Click" Margin="45,247,47,82"/>
    </Grid>
</Window>
