<UserControl x:Class="Line_Manager_Vista.cardUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Line_Manager_Vista"
             mc:Ignorable="d" 
             Height="80" Width="150">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="109*"/>
            <ColumnDefinition Width="41*"/>
        </Grid.ColumnDefinitions>
        <Border Background="#293035" Margin="10" CornerRadius="8" Padding="10" Grid.ColumnSpan="2">
            <StackPanel Orientation="Horizontal">
                <Border Background="#293035" Margin="10" CornerRadius="8" Padding="10">
                    <StackPanel>
                        <TextBlock x:Name="txtNombreSitio" Foreground="White" FontWeight="Bold" FontSize="14" />
                        <TextBlock x:Name="txtStatus" Foreground="White" FontSize="12" />
                        <TextBlock x:Name="txtOperadora" Foreground="White" FontSize="12" />
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
        <Button Content="Agregar Línea" Click="BtnAgregarLinea_Click" Grid.ColumnSpan="2" Margin="10,264,31,-264" />
    </Grid>
</UserControl>
