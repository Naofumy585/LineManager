<UserControl x:Class="Line_Manager_Vista.Linea_Taxi"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Line_Manager_Vista"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Grid.Column="1" Margin="0,0,0,10">
        <!-- Tarjetas -->
        <WrapPanel ItemWidth="200" ItemHeight="80" Orientation="Horizontal" Margin="0,10,10,-1" HorizontalAlignment="Right" Width="601">
            <!-- Ejemplo de tarjeta -->
            <Border Background="#293035" Margin="10" CornerRadius="8" Padding="10">
                <StackPanel Orientation="Horizontal">
                    <Ellipse Width="40" Height="40" Fill="#D9D9D9" Margin="5"/>
                    <Rectangle Width="100" Height="20" Fill="#D9D9D9" Margin="5"/>
                </StackPanel>
            </Border>

            <!-- Repite según sea necesario -->
        </WrapPanel>
    </Grid>
</UserControl>
