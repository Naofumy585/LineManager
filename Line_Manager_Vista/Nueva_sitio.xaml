<UserControl x:Class="Line_Manager_Vista.Nueva_sitio"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Line_Manager_Vista"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="245,173,255,177">
            <TextBox x:Name="txtNombreSitio" Width="300" Height="30"  Background="#D9D9D9"/>
            <ComboBox x:Name="cmbStatusSitio" Width="300" Height="30" Background="#D9D9D9">
                <ComboBoxItem Content="Activo" Tag="1" />
                <ComboBoxItem Content="Desactivado" Tag="2" />
            </ComboBox>
            <TextBox x:Name="txtRutaImagen" Width="300" Height="30" Background="#D9D9D9" IsReadOnly="True"/>
            <Button Content="Buscar Imagen" Width="70" Height="30" Click="btnBuscarImagen_Click"/>
            <TextBox x:Name="txtNombreOperador" Width="300" Height="30"  Background="#D9D9D9"/>
            <TextBox x:Name="PasswordOperador" Width="300" Height="30"  Background="#D9D9D9"/>
            <ComboBox x:Name="TipoOperador" Width="300" Height="30" Background="#D9D9D9">
                <ComboBoxItem Content="Administrador" Tag="1" />
                <ComboBoxItem Content="UOperador" Tag="2" />
            </ComboBox>
            <Button Content="Agregar Linea" Width="80" Height="40" Background="#293035" Foreground="White" Click="btnAgregarSitio_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
