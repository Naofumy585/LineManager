<Window x:Class="Line_Manager_Vista.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Line_Manager_Vista"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="161"/>
            <!-- Barra lateral fija -->
            <ColumnDefinition/>
            <!-- Contenido principal -->
        </Grid.ColumnDefinitions>

        <!-- Barra lateral -->
        <StackPanel Grid.Column="0" Background="#293035" Orientation="Vertical">
            <!-- Espacio arriba para "Tipo de cuenta" -->
            <TextBlock Text="Tipo de cuenta" Foreground="White" Margin="10" FontSize="10"/>

            <!-- Íconos verticales (puedes usar imágenes o FontAwesome) -->
            <Button Margin="10" Height="40" Background="Transparent">
                <Image Source="casa.png" Stretch="Uniform" OpacityMask="{x:Null}"/>
            </Button>
            <Button Margin="10" Height="40" Background="Transparent" >
                <Image Source="taxi.png" Stretch="Uniform"/>
            </Button>
            <Button Margin="10" Height="40" Background="Transparent">
                <Image Source="operadora.png" Stretch="Uniform"/>
            </Button>
            <Button Margin="10" Height="40" Background="Transparent">
                <Image Source="stonks.png" Stretch="Uniform"/>
            </Button>
            <Button Margin="10" Height="40" Background="Transparent">
                <Image Source="ajustes.png" Stretch="Uniform"/>
            </Button>
            <Button Margin="10" Height="40" Background="{x:Null}">
                <Image Source="cerrar-sesion.png" Stretch="Uniform"/>
            </Button>
            <!-- Agrega más íconos aquí -->
        </StackPanel>

        <!-- Contenido principal -->
        <Grid Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Barra superior -->
                <RowDefinition Height="*"/>
                <!-- Tarjetas -->
            </Grid.RowDefinitions>

            <!-- Barra superior -->
            <!-- Barra superior -->
            <DockPanel Grid.Row="0" Margin="-20,-20,-20,0" Background="#FF293239">

                <!-- Ícono de perfil -->
                <Ellipse Width="30" Height="30" Fill="Gray" Margin="5" DockPanel.Dock="Right"/>

                <!-- Bandera -->
                <Image Source="mexico.png" Height="20" Margin="5" DockPanel.Dock="Right"/>
                <!-- Lupa como botón -->
                <Button Width="30" Height="30" Margin="5" DockPanel.Dock="Right" Background="Transparent" BorderThickness="0" Cursor="Hand">
                    <Image Source="lupa.png" Stretch="Uniform" ScrollViewer.HorizontalScrollBarVisibility="Auto" RenderTransformOrigin="0.429,0.45"/>
                </Button>

                <!-- Texto como simulación de barra de búsqueda -->
                <TextBox Text="Buscar..." Foreground="LightGray" FontSize="14" VerticalAlignment="Center" Margin="10" DockPanel.Dock="Right" Width="191"/>

                <!-- Notificación -->
                <Image Source="campana.png" Height="20" Margin="5" DockPanel.Dock="Right"/>

                <!-- Email -->
                <Image Source="email.png" Height="20" Margin="5" DockPanel.Dock="Right"/>
            </DockPanel>


            <!-- Tarjetas -->
            <WrapPanel Grid.Row="1" x:Name="datosWrappanel" Margin="0,19,-10,-10" >
                <!-- Ejemplo de tarjeta -->
                <!--<Border Background="#293035" Margin="10" CornerRadius="8" Padding="10">
                    <StackPanel Orientation="Horizontal">
                        <Ellipse Width="40" Height="40" Fill="#D9D9D9" Margin="5"/>
                        <Rectangle Width="100" Height="20" Fill="#D9D9D9" Margin="5"/>
                    </StackPanel>
                </Border>-->

                <!-- Repite según sea necesario -->
            </WrapPanel>
        </Grid>
    </Grid>
</Window>