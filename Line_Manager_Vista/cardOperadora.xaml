<UserControl x:Class="Line_Manager_Vista.cardOperadora"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Line_Manager_Vista"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="200">
    <Grid>
        <Border Background="#293035" Margin="10" CornerRadius="8" Padding="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="txtUsuario" Foreground="White" Margin="5"/>
                <TextBlock x:Name="txtTipo" Foreground="White" Margin="5"/>
                <TextBlock x:Name="txtSitio" Foreground="White" Margin="5"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>